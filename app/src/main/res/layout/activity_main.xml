<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTulisan" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tombol_trjemah"
        android:id="@+id/btnTerjemah"
        android:layout_marginTop="93dp"
        android:layout_below="@+id/txtTulisan"
        android:layout_centerHorizontal="true"
        android:onClick="onClickbtnTerjemah" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tombol_trjemah2"
        android:id="@+id/tomboltrjemah2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClicktomboltrjemah2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tombol_trjemah3"
        android:id="@+id/button2"
        android:layout_below="@+id/tomboltrjemah2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="91dp"
        android:onClick="onClicktomboltrjemah3" />

</RelativeLayout>
